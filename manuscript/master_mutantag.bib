@article{poulin_interspecific_1999,
	title = {Interspecific synchrony and asynchrony in the fruiting phenologies of congeneric bird-dispersed plants in Panama},
	volume = {15},
	issn = {1469-7831, 0266-4674},
	url = {https://www.cambridge.org/core/journals/journal-of-tropical-ecology/article/interspecific-synchrony-and-asynchrony-in-the-fruiting-phenologies-of-congeneric-birddispersed-plants-in-panama/9FBFC1B8486BDF7241F48F3DBB4C1006},
	doi = {10.1017/S0266467499000760},
	abstract = {Plants potentially compete for seed dispersal. Selection may favour temporally segregated fruiting phenologies to minimize this competition and also to maintain resident populations of dispersal agents. Alternatively, selection may favour temporally aggregated fruiting phenologies when the effectiveness of seed dispersal agents varies seasonally or when large, synchronous fruit displays enhance dispersal. These evolutionary scenarios assume that plants share seed dispersal agents. This assumption and temporal overlap in fruiting phenologies were evaluated for the Miconia and Psychotria of central Panama. These two genera accounted for 18 and 27\%, respectively, of 1096 fleshy fruits found in regurgitation or faecal samples taken from 2054 birds of 103 species netted in the forest understorey. Two species of manakins accounted for 62\% (123/200) of all Miconia fruit taken. Three species of manakins and three species of migratory thrushes accounted for 97\% (282/292) of all Psychotria fruits taken. There is a high potential for intrageneric competition for seed dispersal for both plant genera. Null model analyses showed that the fruiting phenologies of Miconia (14 species) are segregated in time, while fruiting of Psychotria (21 species) is highly aggregated. The Miconia were found in up to 24\% of the diet samples for the two manakin species, suggesting that Miconia may be a critical resource for both species. The Psychotria fruited when the diversity of understorey fruits was greatest, suggesting a high potential for both intra- and extrageneric competition. The abundance and nomadism of the six bird species that consumed most Psychotria fruit peaked when the Psychotria fruited, supporting the enhancement hypothesis.},
	pages = {213--227},
	number = {2},
	journaltitle = {Journal of Tropical Ecology},
	author = {Poulin, Brigitte and Wright, S. Joseph and Lefebvre, Gaëtan and Calderón, Osvaldo},
	urldate = {2020-04-22},
	date = {1999-03},
	langid = {english},
	note = {Publisher: Cambridge University Press},
	keywords = {seed dispersal, competition, diet diversity, frugivorous birds, fruiting phenology, Miconia, Panama, Psychotria}
}

