@article{ferriere_evolution_2007,
	title = {Evolution and persistence of obligate mutualists and exploiters: competition for partners and evolutionary immunization},
	volume = {10},
	issn = {1461-023X},
	url = {https://onlinelibrarywiley-com.ez67.periodicos.capes.gov.br/doi/full/10.1111/j.1461-0248.2006.01008.x},
