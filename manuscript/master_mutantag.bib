	author = {Ferrière, Régis and Gauduchon, Mathias and Bronstein, Judith L.},
	urldate = {2019-11-07},
	date = {2007-02-01},
	keywords = {mutualism, coevolution, exploitation, Cheating, coexistence, competition for partners, competitive asymmetry, evolutionary immunization, evolutionary suicide}
}

